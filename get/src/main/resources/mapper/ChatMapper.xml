<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.get.chat.ChatMapper">

    <select id="findByRoomId">
        SELECT *
        FROM CHATTING_ROOM
        WHERE CHATTING_NO = #{roomId}
    </select>
    <insert id="saveChat">
        INSERT INTO MESSAGE
        VALUES (null,
                #{message_content},
                'N',
                SYSDATE,
                #{sender_no},
                #{chatting_no})
    </insert>

    <select id="findAllRooms">
        SELECT *
        FROM CHATTING_ROOM
    </select>

    <insert id="createRoom">
        INSERT INTO CHATTING_ROOM
        VALUES ( #{chatting_no}
               , SYSDATE
               , #{open_member}
               , #{open_member})
    </insert>
</mapper>